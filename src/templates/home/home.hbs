{{!< layout}}

<header>
  <div class='jumbotron header'> 
    <div class='jumbo'>METAPHORGY</div>
  </div>
  <div class='jumbotron subhead'>
    <h3>a website to help you build metaphors</h3>
    <h5>Pick your article, enter your word, get back a metaphor.</h5>
  </div>
</header>

<section class='container'>
  <form action='/metaphor' id='metaform'>
    <div id='question' class='row {{#if metaphor}}hidden{{/if}}'>
      <div class='col-sm-7 col-sm-offset-2'>
        <div class='input-group input-group-lg'>
          <div class='input-group-btn'>
            <button type='button' id='article-word' class='btn btn-primary dropdown-toggle' data-toggle='dropdown'> My <span class='caret'></span></button>
            <ul class='dropdown-menu'>
              <li><a href='#'>My</a></li>
              <li><a href='#'>A</a></li>
              <li><a href='#'>The</a></li>
            </ul>
          </div><!-- /btn-group -->

          <input type='text' id='word-entry' class='form-control' placeholder='Enter a word' name='word'>
        </div>
      </div>
      <div class='col-sm-2'><p class='entry'>is a</p></div>
    </div>

    <div id='answer' class='col-sm-12 {{#unless metaphor}}hidden{{/unless}}'>
      <p class='result'>My <span class='word' id='word'>{{ word }}</span> is a <span class='word' id='metaphor'>{{metaphor}}</span>.
      </div>

      <div class='row submit'>
        <div class='col-sm-12'>
          <p class='perspective'>
            <button type='submit' class='btn btn-entry {{#if metaphor}}btn-success3d{{/if}}'>Complete Sentence</button>
          </p>
        </div>
      </div>
    </div>
  </form>
</section>
