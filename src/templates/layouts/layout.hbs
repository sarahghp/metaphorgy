<!DOCTYPE html>
<html>
  <head>
    <title>Metaphorgy: Metaphor Generator</title>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <link href='/css/app.css' rel='stylesheet' media='screen'>
  </head>
  <body>
    <div id='main' role='main'>
      {{{body}}}
    </div>

    {{! JavaScript libraries; loaded from src/public/js/lib   }}
    <script type="text/javascript" src='/js/lib/jquery-1.10.2.min.js'></script>
    <script type="text/javascript" src='/js/lib/bootstrap.min.js'></script>

    {{! Compiled js; built with grunt and loaded from src/public/build/js }}
    <script type="text/javascript" src='/js/app.js'></script>

    {{#if googleAnalyticsId}}
      <script async>
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '{{googleAnalyticsId}}']);
        _gaq.push(['_setDomainName', '{{googleAnalyticsDomain}}']);
        _gaq.push(['_setAllowHash', false]);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script');
          ga.type = 'text/javascript';
          ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';

          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
    {{/if}}
  </body>
</html>
